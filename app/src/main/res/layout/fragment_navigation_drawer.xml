<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context="com.mobitrack.mobi.NavigationDrawer">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_container_height"
        android:id="@+id/user_container"
        android:background="@color/colorPrimaryDark"
        android:padding="@dimen/default_margin">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:id="@+id/iv_profile" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_profile"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                style="@style/NameTextStyle" />

            <TextView
                android:id="@+id/email"
                style="@style/EmailTextStyle" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/menu_conatiner"
        android:layout_below="@+id/user_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/large_padding"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/item_back"
            android:padding="@dimen/small_padding">

            <ImageView
                android:layout_width="@dimen/nav_icon"
                android:layout_height="@dimen/nav_icon"
                android:src="@drawable/home"
                android:tint="@color/colorPrimary"
                android:layout_gravity="center_vertical"
                android:padding="4dp" />

            <TextView
                android:text="@string/home"
                style="@style/NavTextStyle"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"
            android:background="@drawable/item_back"
            android:padding="@dimen/small_padding">

            <ImageView
                android:layout_width="@dimen/nav_icon"
                android:layout_height="@dimen/nav_icon"
                android:src="@drawable/admin"
                android:tint="@color/colorPrimary"
                android:layout_gravity="center_vertical"
                android:padding="4dp" />

            <TextView
                android:text="@string/admin"
                style="@style/NavTextStyle"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/item_back"
            android:padding="@dimen/small_padding">

            <ImageView
                android:layout_width="@dimen/nav_icon"
                android:layout_height="@dimen/nav_icon"
                android:src="@drawable/ic_profile"
                android:tint="@color/colorPrimary"
                android:layout_gravity="center_vertical"
                android:padding="4dp" />

            <TextView
                android:text="@string/profile"
                style="@style/NavTextStyle"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/item_back"
            android:padding="@dimen/small_padding">

            <ImageView
                android:layout_width="@dimen/nav_icon"
                android:layout_height="@dimen/nav_icon"
                android:src="@drawable/notification"
                android:tint="@color/colorPrimary"
                android:layout_gravity="center_vertical"
                android:padding="4dp" />

            <TextView
                android:text="@string/notification"
                style="@style/NavTextStyle"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/item_back"
            android:padding="@dimen/small_padding">

            <ImageView
                android:layout_width="@dimen/nav_icon"
                android:layout_height="@dimen/nav_icon"
                android:src="@drawable/alert"
                android:tint="@color/colorPrimary"
                android:layout_gravity="center_vertical"
                android:padding="4dp" />

            <TextView
                android:text="@string/alert"
                style="@style/NavTextStyle"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/item_back"
            android:padding="@dimen/small_padding">

            <ImageView
                android:layout_width="@dimen/nav_icon"
                android:layout_height="@dimen/nav_icon"
                android:src="@drawable/payment"
                android:tint="@color/colorPrimary"
                android:layout_gravity="center_vertical"
                android:padding="4dp" />

            <TextView
                android:text="@string/payment"
                style="@style/NavTextStyle"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/expenses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/item_back"
            android:padding="@dimen/small_padding">

            <ImageView
                android:layout_width="@dimen/nav_icon"
                android:layout_height="@dimen/nav_icon"
                android:src="@drawable/expense"
                android:tint="@color/colorPrimary"
                android:layout_gravity="center_vertical"
                android:padding="4dp" />

            <TextView
                android:text="@string/expense"
                style="@style/NavTextStyle"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/contact_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/item_back"
            android:padding="@dimen/small_padding">

            <ImageView
                android:layout_width="@dimen/nav_icon"
                android:layout_height="@dimen/nav_icon"
                android:src="@drawable/contact"
                android:tint="@color/colorPrimary"
                android:layout_gravity="center_vertical"
                android:padding="4dp" />

            <TextView
                android:text="@string/contact_us"
                style="@style/NavTextStyle"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/item_back"
            android:padding="@dimen/small_padding">

            <ImageView
                android:layout_width="@dimen/nav_icon"
                android:layout_height="@dimen/nav_icon"
                android:src="@drawable/logout"
                android:tint="@color/colorPrimary"
                android:layout_gravity="center_vertical"
                android:padding="4dp" />

            <TextView
                android:text="@string/log_out"
                style="@style/NavTextStyle"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
