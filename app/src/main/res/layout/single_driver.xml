<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:clickable="true"
    android:focusable="true"
    android:layout_margin="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/medium_padding"
                android:id="@+id/top">

                <!--android:text="DHK-GA-11-12233"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:textAllCaps="true"-->

                <TextView
                    android:id="@+id/model"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DHK-GA-11-12233"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    />

                <ImageView
                    android:layout_width="@dimen/small_icon_size"
                    android:layout_height="@dimen/small_icon_size"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ripple"
                    android:id="@+id/indicator"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@+id/top"
                android:id="@+id/mid"
                android:layout_marginTop="@dimen/medium_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/driver_image"
                    android:layout_width="@dimen/driver_image_size"
                    android:layout_height="@dimen/driver_image_size"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_profile" />

                <TextView
                    android:layout_marginTop="@dimen/small_padding"
                    android:id="@+id/driver_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/driver_name"
                    android:textSize="14sp"
                    android:layout_below="@+id/driver_image"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:textColor="#670c02"/>

                <TextView
                    android:textSize="@dimen/small_text_size"
                    android:id="@+id/current_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/driver_name"
                    android:textColor="#212121"
                    android:text="West DhanMondi, Sankar,Dhanmondi,Dhaka-1204"
                    android:drawableStart="@drawable/ic_location"
                    android:drawablePadding="@dimen/medium_padding"/>





            </RelativeLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_marginTop="@dimen/small_padding"
            android:id="@+id/bottom_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="@dimen/small_padding">

                <ImageView
                    android:id="@+id/edit"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:src="@drawable/ic_edit"
                    android:tint="@color/colorPrimary"
                    android:background="@drawable/ripple"/>

                <ImageView
                    android:id="@+id/share"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:src="@drawable/ic_share"
                    android:tint="@color/colorPrimary"
                    android:background="@drawable/ripple"
                    android:layout_marginStart="@dimen/medium_padding"/>

                <ImageView
                    android:id="@+id/share_user"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:src="@drawable/ic_group"
                    android:tint="@color/colorPrimary"
                    android:layout_marginStart="@dimen/medium_padding"
                    android:layout_marginEnd="@dimen/medium_padding"
                    android:background="@drawable/ripple"/>
                    <!--android:background="@drawable/g_back"-->

                <ImageView
                    android:id="@+id/driver_phone"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:src="@drawable/ic_call"
                    android:tint="@color/colorPrimary"
                    android:background="@drawable/ripple"/>


            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>