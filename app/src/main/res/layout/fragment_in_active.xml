<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/default_margin"
    tools:context="com.mobitrack.mobi.fragments.home.InActiveFragment">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="@dimen/medium_padding"
        app:cardCornerRadius="@dimen/small_padding">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/medium_padding"
            android:layout_marginBottom="@dimen/medium_padding"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You have been Temporarily Block From the Services.\nPlease Contact with "
                    style="@style/TaskTitle"
                    android:gravity="center_horizontal"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginTop="@dimen/medium_padding"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/image"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_marginTop="@dimen/medium_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    style="@style/TaskTitle"
                    android:id="@+id/name"/>

                <TextView
                    android:layout_marginTop="@dimen/medium_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    style="@style/TaskTitle"
                    android:textSize="16sp"
                    android:id="@+id/phone"/>

                <TextView
                    android:layout_marginTop="@dimen/medium_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    style="@style/TaskTitle"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    android:id="@+id/email"/>

            </LinearLayout>



        </RelativeLayout>

    </android.support.v7.widget.CardView>



</RelativeLayout>
