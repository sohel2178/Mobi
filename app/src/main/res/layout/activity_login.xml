<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            android:padding="@dimen/large_padding"
            android:layout_weight="4">

            <ImageView
                android:layout_marginTop="@dimen/default_margin"
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:id="@+id/logo"
                android:src="@drawable/mobi_logo"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Fastest GPS Tracking Service in Bangladesh"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>



        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6">

        </RelativeLayout>

    </LinearLayout>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <android.support.v7.widget.CardView
            android:layout_marginTop="-120dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="@dimen/small_padding"
            app:cardElevation="@dimen/medium_padding"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="30dp"
                android:id="@+id/container">

                <TextView
                    android:layout_marginTop="@dimen/default_margin"
                    android:layout_marginStart="@dimen/default_margin"
                    android:layout_marginEnd="@dimen/default_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:textStyle="bold"
                    android:padding="@dimen/medium_padding"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/login_design"
                    android:textSize="18sp"
                    android:textAllCaps="true"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/medium_padding">


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ti_email">

                        <EditText
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/email"
                            android:fontFamily="@font/arima_madurai_medium"
                            android:inputType="textEmailAddress"/>



                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ti_password">
                        <EditText
                            android:id="@+id/password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/password"
                            android:fontFamily="@font/arima_madurai_medium"
                            android:inputType="textPassword"/>


                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/large_padding"
            app:cardElevation="@dimen/medium_padding"
            app:layout_anchor="@id/card"
            app:cardBackgroundColor="@color/colorAccent"
            app:layout_anchorGravity="bottom|center">

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/medium_padding"
                android:gravity="center"
                android:text="Login"
                android:id="@+id/login"
                android:textColor="@android:color/white"
                android:textAllCaps="true"
                android:textSize="18dp"/>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_anchor="@id/card_2"
            app:layout_anchorGravity="bottom|center"
            android:layout_gravity="bottom|center_horizontal"
            android:padding="@dimen/medium_padding">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="20dp"
                app:cardElevation="@dimen/medium_padding">
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="OR"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:gravity="center"/>
            </android.support.v7.widget.CardView>

            <com.google.android.gms.common.SignInButton
                android:layout_marginTop="@dimen/medium_padding"
                android:id="@+id/google_sign_in"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sign_in_button_height"
                android:layout_marginStart="@dimen/large_padding"
                android:layout_marginEnd="@dimen/large_padding"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/small_padding"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Need an Account?"/>

                <TextView
                    android:layout_marginStart="@dimen/large_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sign_up"
                    android:text="Sign up"
                    android:textColor="@android:color/holo_blue_bright"
                    android:textAllCaps="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/small_padding"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/forget_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textColor="@android:color/holo_red_light"
                    android:text="Forgot Password ?"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/small_padding"
                android:layout_marginBottom="@dimen/default_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login_visit"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"/>

                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/medium_padding"
                        android:id="@+id/facebook"
                        android:tint="@color/colorPrimary"
                        android:contentDescription="@string/mobitrack_facebook"
                        android:src="@drawable/ic_facebook" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/medium_padding"
                        android:id="@+id/twitter"
                        android:tint="@color/colorPrimary"
                        android:contentDescription="@string/mobitrack_google_plus"
                        android:src="@drawable/ic_twiitter" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/medium_padding"
                        android:id="@+id/linked_in"
                        android:tint="@color/colorPrimary"
                        android:contentDescription="@string/mobitrack_twitter"
                        android:src="@drawable/linkedin" />

                    <ImageView
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="@color/colorPrimary"
                        android:contentDescription="@string/mobitrack_call"
                        android:src="@drawable/ic_call" />
                </LinearLayout>

            </LinearLayout>





        </LinearLayout>






    </android.support.design.widget.CoordinatorLayout>



</RelativeLayout>



